class Hotel{
    
    string Name;
    int id;
    
    Location hotelLocation;
    
    vector<Room>roomList;
};

class Location{
    
    int pin;
    string Street;
    string area;
    string city;
    string country;
};

class Room{
    
    string roomNUmber;      //object of the class  
    Roomstyle roomStyle;   //definining the object 
    RoomStatus roomStatus;
    double bookingprice;
    vector<Roomkey>roomkeys;
    vector<HouseKeepingLog> HouseKeepingLogs;
};

class Roomstyle{
    
     void standard()
     {
         cout<<" ";
     }
     
     void delux()
     {
         
     }
     void family_suite()
     {
         
     }
};
class RoomStatus{
   
   Available , reserved ,not_available ,occupied ,service_in_progress  //??
    
};
class RoomKey{
    string keyId;
    string barcode;
    string issuedAt;
    bool isActive;
    bool isMaster;
    
    public :
    void assignRoom(Room room);
};


class HouseKeepingLog{
    
    String description;
    Date startDate;
    int duration;
    HouseKeeper housekeeper;
    
    
    public :
    void addRoom(Room room);
};

class Person{
    
    virtual void print()=0;
    String name;
    Account accountDetails;
    string phone;
};

public class Account {
    string username;
    string password;
    
    AccountStatus accounStatus;
    
};
class accounStatus{
    void active();
    void closed();
    void blocked();
};



class Housekeeper :  public person{
  
    public :
    vector<Room> getRoomServiced(Date date);
    
};
class Guest : public person{
    
    Search serachObj;
    Booking bookingobj;
    
    public :
    vector<RoomBooking> getAllRoomBooking();
};

class ReceptionList : public person{
     Search serachObj;
    Booking bookingobj;
    
    public :
    void checkInGuest(Guest guest,RoomBooking bookingInfo);
    void checkOutGuest(Guest guest,RoomBooking bookingInfo);
}

class admin : public person{
    void addroom();
    void deleteroom();
    void editroom();
}




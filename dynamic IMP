//Maximum maxproduct subarray

class Solution {
public:
    int maxProduct(vector<int>& nums) {
        
        int cur_min=1;
        int cur_max=1;
        int ans=INT_MIN;
        for(int i=0;i<nums.size();i++)
        {
           if(nums[i]<0)
               swap(cur_max,cur_min);
            
            cur_max=max(nums[i],cur_max*nums[i]);
            cur_min=min(nums[i],cur_min*nums[i]);
            
            ans=max(ans,cur_max);
        }
      return ans;
        
    }
};
